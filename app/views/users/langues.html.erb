<section class="slice-sm sct-color-1">
    <div class="profile">
        <div class="container">
            <div class="row cols-xs-space cols-sm-space cols-md-space">
                <div class="col-lg-4">
                    <div class="sidebar sidebar-inverse bg-base-1 sidebar--style-2 no-border stickyfill">
                        <div class="widget">
        <!-- Profile picture -->
                 <div class="profile-picture profile-picture--style-2">
                            <% if @user.avatar.attached? %>
                                <%= image_tag @user.avatar, class: "img-center"%>
                                <% else %>
                                    <%= image_tag "profil.jpg", class: "img-center"%>
                                <% end %>
                                <a href="#" class="btn-aux">
                                    <i class="ion ion-edit"></i>
                                </a>
                            </div>
                  <!-- Profile details -->
                  <div class="profile-details">
                      <h2 class="heading heading-4 strong-500 profile-name"><%= @user.first_name %> <%= @user.last_name %></h2>
                      
                      <h3 class="heading heading-light heading-6 strong-400 profile-location"><%= @user.city %>, <%= @user.country %></h3>
                  </div>

                  <!-- Profile connect -->
                  <div class="profile-connect mt-4">  
                      <a href="#" class="btn btn-styled btn-base-2 btn-circle">Send message</a>
                            </div>  
              </div>
                    </div>
                </div>

                                    <div class="col-lg-8">
                                        <div class="main-content">
                                            <!-- Page title -->
                                            <div class="page-title">
                                                <div class="row align-items-center">
                                                    <div class="col-lg-6 col-12">
                                                        <h2 class="heading heading-5 text-capitalize strong-500 mb-0">Profil
                                                        </h2>
                                                    </div>
                                                    <div class="col-lg-6 col-12">

                                                    </div>
                                                </div>
                                            </div>
                                       <div class="link-menu link-menu--style-3 py-4 border-bottom">
                                        <%= link_to 'Mon profil', current_user %>
                                        <%= link_to 'Modifier mon profil', edit_user_registration_path, :class =>"active" %>
                                        <%= link_to 'Following', following_user_path(current_user) %>
                                        <%= link_to 'Followers', followers_user_path(current_user) %>
                                      </div>

                                      <div class="link-menu link-menu--style-3 py-4 ">
                                        <%= link_to 'Paramètres général', edit_user_registration_path %>
                                        <%= link_to 'Préférences', preferences_user_path(current_user[:id])%>
                                        <%= link_to 'Langues', langues_user_path(current_user[:id]), :class =>"active" %>
                                      </div>
          <!-- Account settings -->
          <div class="row">
            <div class="col-lg-12">
              <form class="form-default" data-toggle="validator" role="form">
              	<h1>HOLA !</h1>

            </div>
          </div>
        </section>