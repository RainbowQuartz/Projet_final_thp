<% content_for(:title) do %>
    <%= "Speak&Up | " + @user.first_name + " " + @user.last_name %>
<% end %>
<section class="slice-sm sct-color-1">
    <div class="profile">
        <div class="container">
            <div class="row cols-xs-space cols-sm-space cols-md-space">
                <div class="col-lg-4">
                    <div class="sidebar sidebar-inverse bg-base-1 sidebar--style-2 no-border stickyfill">
                        <div class="widget">
                            <div class="profile-picture profile-picture--style-2">
                                <% if @user == current_user %>
                                    <% if @user.avatar.attached? %>
                                        <%= image_tag @user.avatar, class: "img-center"%>
                                    <% else %>
                                        <%= image_tag "profil.jpg", class: "img-center"%>
                                    <% end %>
                                    <%= link_to '', edit_user_registration_path, :class =>"btn-aux" %>
                                <% else %>
                                    <% if @user.avatar.attached? %>
                                        <%= image_tag @user.avatar, class: "img-center" %>
                                    <% else %>
                                        <%= image_tag "profil.jpg", class: "img-center" %>
                                    <% end %>
                                <% end %>
                            </div>
				            <div class="profile-details">
				                <h2 class="heading heading-4 strong-500 profile-name"><%= @user.first_name %> <%= @user.last_name %></h2>
				                <h3 class="heading heading-light heading-6 strong-400 profile-location"><%= @user.city %>, <%= @user.country %></h3>
				            </div>
				            <div class="profile-connect mt-4">
				                <p><%= render 'follow_form' %></p>
                        <% unless @user == current_user %>
                          <p><%= link_to 'Envoyer message', user_chats_path(current_user), class: 'btn btn-styled btn-base-1 btn-circle' %></p>
                        <% end %>
                    </div>
   					    </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="main-content">
                        <div class="page-title">
                            <div class="row align-items-center ">
                                <div class="col-lg-6 col-12">
                                     <h2 class="heading heading-5 text-capitalize strong-500 mb-0">Profil de <%= @user.first_name %></h2>
                                </div>
                            </div>
                        </div>
                        <div class="link-menu link-menu--style-3 py-4 border-bottom">
                            <% if @user == current_user %>
                                <%= link_to 'Mon profil', current_user, class: 'active'%>
                                <%= link_to 'Modifier mon profil', edit_user_registration_path %>
                                <%= link_to 'Mes contacts', match_user_path(current_user) %>
                                <%= link_to 'Mes demandes', following_user_path(current_user) %>
                                <%= link_to 'Messagerie', user_chats_path(current_user) %>
                                <% else %>
                                    <%= link_to 'Mon profil', current_user, class: 'active'%>
                            <% end %>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-default" data-toggle="validator" role="form">
                                    <div class="card no-border bg-transparent">
                                        <div class="card-title px-0 pb-0 no-border">
                                            <h2 class="heading heading-5 text-capitalize strong-500 mb-0">Biographie
                                            </h2>
                                            <p class="mt-1 mb-0">
                                                <%= @user.bio %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                                <!-- Languages section -->
                            <hr class="mt-0 mb-0">
                            <div class="card no-border bg-transparent">
                                <div class="card-title px-0 pb-0 no-border">
                                    <div class="page-title">
                                        <div class="row align-items-center">
                                            <div class="col-lg-6 col-12">
                                                <h2 class="heading heading-5 text-capitalize strong-500 mb-0">
                                                    <i class="ion-ios-arrow-back"></i> Langues
                                                </h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="card no-border bg-transparent">
                                                <div class="card-title px-0">
                                                    <h3 class="heading heading-6 strong-600">
                                                        Langues maitrisées :
                                                    </h3>
                                                </div>
                                                <div class="card-body px-0">
                                                    <div>
                                                        <ul class="checkbox">
                                                            <% @user.spoken_languages.each do |language| %>
                                                                <li><%= Language.find(language.language_id).name %></li>
                                                            <% end %>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="card no-border bg-transparent">
                                                <div class="card-title px-0">
                                                    <h3 class="heading heading-6 strong-600">
                                                        Langues en cours d'apprentissage :
                                                    </h3>
                                                </div>
                                                <div class="card-body px-0">
                                                    <div>
                                                        <ul class="checkbox">
                                                          <% @user.wanted_languages.each do |language| %>
                                                              <li><%= Language.find(language.language_id).name %></li>
                                                          <% end %>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <!-- Interests section  -->
                                <hr class="mt-0 mb-0">
                                <div class="card no-border bg-transparent">
                                    <div class="card-title px-0 pb-0 no-border">
                                        <h3 class="heading heading-6 strong-600">
                                            Centres d'intérêts
                                        </h3>
                                    </div>
                                    <div class="card-body px-0">
                                        <div class="row">
                                            <div class="col-md-6 col-lg-4">
                                                <% @user.interests.each do |interest| %>
                                                    <span class="badge badge-lg badge-primary"><%= interest.name %></span>
                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
