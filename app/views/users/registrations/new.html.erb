<% content_for(:title) do %>
<%= "Speak&Up | Inscriptions" %>
<% end %>
<section class="slice-lg has-bg-cover bg-size-cover"  bottom center>
  <div class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
          <div class="form-card form-card--style-2 z-depth-2-top">
            <div class="bande text-center heading heading-4 strong-400 mb-4"> S'enregistrer
              <div class="form-header-icon">
                <i class="icon ion-log-in"></i>
              </div>
            </div>

            <div class="form-body">
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
              <form class="form-default mt-4" data-toggle="validator" role="form">
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Prénom</label><br>
                      <%= f.text_field :first_name, autofocus: true, autocomplete: "Edgar", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Nom</label><br>
                      <%= f.text_field :last_name, autofocus: true, autocomplete: "Dupont", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Date de naissance</label><br>
                      <%= f.date_field :birthdate, autofocus: true, :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Pays</label><br>
                      <%= f.text_field :country, autofocus: true, autocomplete: "France", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Ville</label><br>
                      <%= f.text_field :city, autofocus: true, autocomplete: "Rennes", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label">Code Postal</label><br>
                      <%= f.number_field :postal_code, autofocus: true, autocomplete: "35000", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <div class="form-group has-feedback">
                      <label>Email</label><br>
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <label>Présentation</label><br>
                      <%= f.text_field :bio, autofocus: true, autocomplete: "Présentez vous", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <label class="control-label" >Mot de passe</label><br>
                      <%= f.password_field :password, autocomplete: "new-password", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group has-feedback">
                      <label class="control-label">Confirmation du mot de passe</label><br>
                      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class =>"form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
                <% if @minimum_password_length %>
                  <small class="">(<%= @minimum_password_length %> caractères minimum)</small><br>
                <% end %><br>

                <div class="mt-1 ">
                  <small class="">En cliquant sur "S'enregistrer" vous acceptez nos termes et conditions.</small>
                </div>

                <%= f.submit "S'enregistrer", :class =>"btn btn-styled btn-lg btn-block btn-base-1 mt-4" %>
              <% end %>
            <%= render "users/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
