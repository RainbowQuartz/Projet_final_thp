<section class="slice-lg has-bg-cover bg-size-cover"  bottom center>
  <div class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-4">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="bande text-center heading heading-4 strong-400 mb-4"> Se connecter
            <div class="form-header-icon">
              <i class="icon ion-log-in"></i>
            </div>
          </div>
          <div class="form-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group has-feedback">
                    <label>Email</label><br/>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class =>"form-control form-control-lg" %>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-lg-12">
                  <div class="form-group has-feedback">
                    <label>Mot de passe</label><br/>
                    <%= f.password_field :password, autocomplete: "current-password", :class =>"form-control form-control-lg" %>
                  </div>
                </div>
              </div>
              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <label>Rester connect√©</label>
                </div>
              <% end -%>
              <%= f.submit "Se connecter", :class =>"btn btn-styled btn-lg btn-block btn-base-1 mt-4"%>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
