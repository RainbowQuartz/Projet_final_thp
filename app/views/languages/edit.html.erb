<% content_for(:title) do %>
<%= "Speak&Up | Editer mes langues" %>
<% end %>
<section class="slice-sm sct-color-1">
    <div class="profile">
        <div class="container">
            <div class="row cols-xs-space cols-sm-space cols-md-space">
                <div class="col-lg-4">
                    <div class="sidebar sidebar-inverse bg-base-1 sidebar--style-2 no-border stickyfill">
                        <div class="widget">
                        	<!-- Profile picture -->
                		    <div class="profile-picture profile-picture--style-2">
                            <% if @user.avatar.attached? %>
                                <%= image_tag @user.avatar, class: "img-center"%>
                                <% else %>
                                    <%= image_tag "profil.jpg", class: "img-center"%>
                                <% end %>
                                <a href="#" class="btn-aux">
                                    <i class="ion ion-edit"></i>
                                </a>
                            </div>
                  <!-- Profile details -->
                  <div class="profile-details">
                      <h2 class="heading heading-4 strong-500 profile-name"><%= @user.first_name %> <%= @user.last_name %></h2>

                      <h3 class="heading heading-light heading-6 strong-400 profile-location"><%= @user.city %>, <%= @user.country %></h3>
                  </div>

                  <!-- Profile connect -->
                  <div class="profile-connect mt-4">
                      <a href="#" class="btn btn-styled btn-base-2 btn-circle">Send message</a>
                  </div>
             	</div>
               </div>
             </div>

             <div class="col-lg-8">
               <div class="main-content">
               <!-- Page title -->
                <div class="page-title">
                 <div class="row align-items-center">
                  <div class="col-lg-6 col-12">
                    <h2 class="heading heading-5 text-capitalize strong-500 mb-0">Profil</h2>
                  </div>
                  <div class="col-lg-6 col-12">
				  </div>
				</div>
			</div>
			<div class="link-menu link-menu--style-3 py-4 border-bottom">
        <%= link_to 'Mon profil', current_user%>
        <%= link_to 'Modifier mon profil', edit_user_registration_path, class: 'active' %>
        <%= link_to 'Mes Matchs', match_user_path(current_user) %>
        <%= link_to 'Following', following_user_path(current_user) %>			
			</div>
			<div class="link-menu link-menu--style-3 py-4 ">
                <%= link_to 'Paramètres général', edit_user_registration_path%>
                <%= link_to 'Préférences', interests_edit_path%>
                <%= link_to 'Langues', languages_edit_path, :class =>"active" %>
            </div>
			<!-- Account settings -->
			<div class="row">
				<div class="col-lg-12">
					<form class="form-default" data-toggle="validator" role="form">
						<!-- Interests info-->
						<div class="card no-border bg-transparent">
							<div class="card-title px-0 pb-0 no-border">
								<h3 class="heading heading-6 strong-600">							                      Ajoutez des langues
								</h3>
							</div>
							<div class="card-body px-0">
								<%= form_for(current_user, url: languages_edit_path, method: :create) do |f| %>
								<div class="field">
									<p class="mt-1 mb-0">
								Langues en apprentissage
								</p><br />
									<%= collection_select(:wanted_languages, :id, Language.all, :id, :name, {}, { :multiple => true}) %>
								</div><br>
								<div class="field">
									<p class="mt-1 mb-0">
								Langues que vous maitrisez
								</p><br>
									<%= collection_select(:spoken_languages, :id, Language.all, :id, :name, {}, { :multiple => true}) %>
								</div><br>
								<%= f.submit "Ajouter", :class =>"btn btn-base-1" %>
								<% end %>
							</div>
						</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
