<%= form_for(@wanted_languages, url: languages_edit_path) do |f| %>
  <div><%= hidden_field_tag :user_id, current_user.id %></div>
  <div class="field">
    <%= f.label "Choisissez les langues que vous voulez apprendre" %><br />
    <%= collection_select(:languages, :id, Language.all, :id, :name, {}, { :multiple => true}) %>
  </div>
  <%= f.submit "Langues en apprentissage"%>
<% end %>

